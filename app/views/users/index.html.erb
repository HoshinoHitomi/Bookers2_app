<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user_info', book: @newbook, user: @login_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show", user_path(user.id) %></td><!--Rspecエラーあり-->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
