<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <% if @user.id == current_user.id %>
        <td><!--画像--></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td><%= link_to "edit", root_path %></td><!--仮置き-->
        <td><%= link_to "destroy", root_path %></td><!--仮置き-->
        <% else %>
        <td><!--画像--></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>