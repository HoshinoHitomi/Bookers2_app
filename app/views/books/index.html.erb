<h2>User info</h2>

<!--画像-->

<table>
  <tbody>
    <tr></tr>

    <tr>
      <th>name</th>
      <th><!--ユーザー名--></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th><!--ユーザーの自己紹介文--></th>
    </tr>
  </tbody>
</table>

<!--ユーザーの編集画面へ-->
<i class="fas fa-user-cog"></i>

<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>

  <label>Opinion</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><!--画像--></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>