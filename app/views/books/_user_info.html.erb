<h2>User info</h2>

<!--画像-->

<table>
  <tbody>
    <tr></tr>

    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<% if user.id == current_user.id %>
  <%= link_to edit_user_path(user.id) do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
<% else %>
  <%= link_to(user_path(current_user.id)) do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
<% end %>

<h2>New book</h2>

<%= form_with model:book, local:true do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>

  <label>Opinion</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
