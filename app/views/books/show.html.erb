<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user_info', book: @newbook, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <%= @user.name %>
            <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
              <td><%= link_to "edit", edit_book_path(@book) %></td><!--Rspecエラーあり-->
              <td><%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？"%></td><!--Rspecエラーあり-->
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>