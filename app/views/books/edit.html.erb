<h2>Editing Book</h2>

<%= form_with model:@book, local:true do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>

  <label>Opinion</label>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>

<span><%= link_to 'Show', book_path(@book) %></span>
<span>|</span>
<span><%= link_to 'Back', books_path %></span>